<Window x:Class="Taskalu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Taskalu"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance {x:Type local:MainViewModel}}" 
        Title="MainWindow" Height="768" Width="1024" MinWidth="400">

    <Grid>
        <Grid.Resources>
            <Style TargetType="TextBlock" x:Key="label1">
                <Setter Property="Margin" Value="4,4,2,-2"/>
                <Setter Property="Foreground" Value="#FF5A6779" />
                <Setter Property="Width" Value="60" />
                <Setter Property="TextAlignment" Value="Right" />
            </Style>
            <Style TargetType="TextBlock" x:Key="label2">
                <Setter Property="Margin" Value="4,4,2,-2"/>
                <Setter Property="Foreground" Value="#FF1E395B"/>
            </Style>
            <Style TargetType="ListBoxItem">
                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            </Style>
        </Grid.Resources>
        <DockPanel>
        <StackPanel DockPanel.Dock="Top" VerticalAlignment="Top">
            <Menu VerticalAlignment="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="e_xit" Click="Exit_Click" />
                </MenuItem>
                <MenuItem Header="_view">
                    <MenuItem Header="" />
                </MenuItem>
            </Menu>
            <ToolBarTray VerticalAlignment="Top">
                <ToolBar Height="26" VerticalAlignment="Top">
                    <Button Name="NewButton" Content="New Task" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="75" Click="NewButton_Click" Background="#FF0C1880" BorderBrush="#FF0C1880" Foreground="White"/>
                </ToolBar>
            </ToolBarTray>
        </StackPanel>
        <StatusBar DockPanel.Dock="Bottom" Height="20" VerticalAlignment="Bottom"/>
        <StackPanel Background="#FFF1EDED" DockPanel.Dock="Bottom" Height="24"  HorizontalAlignment="Stretch">
            <Button Visibility="Collapsed" x:Name="MoreButton" Content="&#x25bc; More &#x25bc;" Click="MoreButton_Click" HorizontalAlignment="Center" Background="#FF0C1880" BorderBrush="#FF0C1880" Foreground="White" />
        </StackPanel>
            <ListView  x:Name="listview1" DockPanel.Dock="Top" BorderThickness="0" Margin="0,0,0,0" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ItemsSource="{Binding Files}" SelectionChanged="ListSelectionChanged" FontSize="20">
                <ListView.View>
                    <GridView AllowsColumnReorder="true" ColumnHeaderToolTip="Task Information">
                        <GridViewColumn Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Priority}" Foreground="#FFC8C800" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                            <GridViewColumnHeader Click="Priority_Click">Priority
                                <GridViewColumnHeader.ContextMenu>
                                    <ContextMenu Name="PriorityCM">
                                        <MenuItem Header="Ascending" Click="PriorityAsc_Click"/>
                                        <MenuItem Header="Descending" Click="PriorityDes_Click"/>
                                    </ContextMenu>
                                </GridViewColumnHeader.ContextMenu>
                            </GridViewColumnHeader>
                        </GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding Name}" Width="400">
                            <GridViewColumnHeader Click="Name_Click">Name
                                <GridViewColumnHeader.ContextMenu>
                                    <ContextMenu Name="NameCM">
                                        <MenuItem Header="Ascending" Click="NameAsc_Click"/>
                                        <MenuItem Header="Descending" Click="NameDes_Click"/>
                                    </ContextMenu>
                                </GridViewColumnHeader.ContextMenu>
                            </GridViewColumnHeader>
                        </GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding DueDate}" Width="200">
                            <GridViewColumnHeader Click="DueDate_Click">Due Date
                                <GridViewColumnHeader.ContextMenu>
                                    <ContextMenu Name="DueDateCM">
                                        <MenuItem Header="Ascending" Click="DueDateAsc_Click"/>
                                        <MenuItem Header="Descending" Click="DueDateDes_Click"/>
                                    </ContextMenu>
                                </GridViewColumnHeader.ContextMenu>
                            </GridViewColumnHeader>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <StackPanel DockPanel.Dock="Top" Name="editpanel" Visibility="Collapsed" >
                <Label Content="name"/>
                <TextBox Name="ep_name" Height="23" TextWrapping="Wrap" Text="" Width="120"/>
                <Label Content="description"/>
                <TextBox Name="ep_description" Height="23" TextWrapping="Wrap" Text="" Width="120"/>
                <Label Content="priority"/>
                <TextBox Name="ep_priority" Height="23" TextWrapping="Wrap" Text="" Width="120"/>
                <Label Content="create date"/>
                <TextBox Name="ep_createdate" Height="23" TextWrapping="Wrap" Text="" Width="120" IsReadOnly="True"/>
                <Label Content="due date"/>
                <TextBox Name="ep_duedate" Height="23" TextWrapping="Wrap" Text="" Width="120"/>
                <Label Content="status"/>
                <TextBox Name="ep_status" Height="23" TextWrapping="Wrap" Text="" Width="120"/>
                <Button Name="ep_save" Content="Save" Width="75" Click="ep_save_Click"/>
                <Button Name="ep_close" Content="Close" Width="75" Click="ep_close_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>

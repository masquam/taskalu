<Window x:Class="Taskalu.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Taskalu"
        mc:Ignorable="d"
        Title="taskalu" Height="378" Width="373">
    <Grid>
        <DockPanel>
            <Label DockPanel.Dock="Top" Content="Welcome" FontSize="16" Height="32" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" ></Label>
            <StackPanel x:Name="DateDetailsBottomToolbar" Background="#FFF1EDED" DockPanel.Dock="Bottom" Height="40"  HorizontalAlignment="Stretch">
                <Button x:Name="MemoOkButton" Content="Ok" IsCancel="True" HorizontalAlignment="Center" Margin="4" Width="96" Height="32"/>
            </StackPanel>
            <TextBox IsReadOnly="True" TextWrapping="Wrap" Text="Welcome to taskal, a tiny task management application for Windows desktop.&#10;&#10;&#10;Please select folders for database and working folder."></TextBox>
        </DockPanel>
    </Grid>
</Window>

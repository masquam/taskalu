                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal"  DockPanel.Dock="Top">
                <Label Content="{x:Static properties:Resources.MW_Priority}" HorizontalAlignment="Left" Height="27" Margin="0,0,0,0" Width="79" VerticalAlignment="Top"/>
                <ComboBox x:Name="priorityBox" SelectedIndex="0" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="92" Foreground="#FF9B9B00" >
                    <ComboBoxItem Content="&#x272e;&#x272e;&#x272e;&#x272e;&#x272e;"/>

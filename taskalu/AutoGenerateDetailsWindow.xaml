                    <ComboBoxItem Content="27"/>
                    <ComboBoxItem Content="28"/>
                    <ComboBoxItem Content="29"/>
                    <ComboBoxItem Content="30"/>
                    <ComboBoxItem Content="31"/>
                </ComboBox>
            </StackPanel>
            <StackPanel x:Name="AutoGenerateType1Panel" Orientation="Horizontal" DockPanel.Dock="Top" Visibility="Collapsed">
                <Label Content="{x:Static properties:Resources.AG_Weekday}" Width="80"></Label>
                <ComboBox x:Name="weekdayBox" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="100" IsReadOnly="True" RenderTransformOrigin="0.417,1.682" SelectionChanged="weekdayBoxSelectionChanged">
                    <ComboBoxItem Content="{x:Static properties:Resources.AG_Sunday}"/>
                    <ComboBoxItem Content="{x:Static properties:Resources.AG_Monday}"/>
                    <ComboBoxItem Content="{x:Static properties:Resources.AG_Tuesday}"/>
                    <ComboBoxItem Content="{x:Static properties:Resources.AG_Wednesday}"/>
                    <ComboBoxItem Content="{x:Static properties:Resources.AG_Thursday}"/>
                    <ComboBoxItem Content="{x:Static properties:Resources.AG_Friday}"/>
                    <ComboBoxItem Content="{x:Static properties:Resources.AG_Saturday}"/>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                <Label Content="{x:Static properties:Resources.MW_Title}" Width="80"></Label>
                <TextBox x:Name="AutoGenerateName" Width="400" MaxLength="32767" Margin="0"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                <Label Content="{x:Static properties:Resources.MW_DueDate}" Width="80"></Label>
                <ComboBox x:Name="hourBox" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="48" IsReadOnly="True" RenderTransformOrigin="0.417,1.682" >
                    <ComboBoxItem Content="00"/>

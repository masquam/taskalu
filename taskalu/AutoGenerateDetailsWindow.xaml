        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:properties="clr-namespace:Taskalu.Properties"
        d:DataContext="{d:DesignInstance {x:Type local:TemplateListViewModel}}" 
        xmlns:local="clr-namespace:Taskalu"
        mc:Ignorable="d"
        Title="taskalu" Height="280" MinHeight="280" MaxHeight="280" Width="500" MinWidth="500" MaxWidth="752" Loaded="AutoGenerateLoaded">
    <Window.Resources>
        <ResourceDictionary Source="ResourceDictionary1.xaml"/>
    </Window.Resources>
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <DockPanel>
            <Label DockPanel.Dock="Top" Content="{x:Static properties:Resources.AG_AutoGenerateEdit}" FontSize="16" Height="32" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" ></Label>
            <StackPanel Orientation="Horizontal"  DockPanel.Dock="Top">
                <Label Content="{x:Static properties:Resources.AG_Type}" HorizontalAlignment="Left" Height="27" Margin="0,0,0,0" Width="79" VerticalAlignment="Top"/>
                <ComboBox x:Name="AutoGenerateTypeBox"  SelectedIndex="0" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="400" SelectionChanged="AutoGenerateTypeBoxSelectionChanged">
                    <ComboBoxItem Content="{x:Static properties:Resources.AG_Type0}"/>
                    <ComboBoxItem Content="{x:Static properties:Resources.AG_Type1}"/>
                </ComboBox>
            </StackPanel>
            <StackPanel x:Name="AutoGenerateType0Panel" Orientation="Horizontal" DockPanel.Dock="Top" >
                <Label Content="{x:Static properties:Resources.AG_Day}" Width="80"></Label>
                <ComboBox x:Name="dayBox" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="48" IsReadOnly="True" RenderTransformOrigin="0.417,1.682" SelectionChanged="dayBoxSelectionChanged">
